@page "/workouts"

<PageTitle>Workouts</PageTitle>

<h1>Workouts</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (workouts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in workouts)
            {
                <tr>
                    <td>@workout.Date.ToShortDateString()</td>
                    <td style="white-space: pre-line">@workout.Description</td>
                    <td>@workout.ClassType.TypeName</td>
                </tr>
            }
        </tbody>
    </table>
}
